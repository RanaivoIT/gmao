{% extends "admin/base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

<nav aria-label="breadcrumb" >
	<ol class="breadcrumb my-3">
		<li class="breadcrumb-item">
			<a href="{{ path('admin') }}">Dashboard</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Demandes</li>
	</ol>
</nav>


<div class="content">
    <div class="card">
        <div class="card-header">
            <span class="card-title h5">Liste des demandes d'interventions</span>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Site</th>
                            <th>Service</th>
                            <th>Equipement</th>
                            <th>Description</th>
                            <th>Etat</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {% for demande in demandes %}
                            <tr>
                                <td> <a href="{{ path('admin_demande_show', {'id': demande.id}) }}" class="link-primary" class="link-primary text-decoration-none">{{ demande.id }}</a> </td>
                                <td>{{ demande.createdAt | date("d/m/Y H:i:s") }}</td>
                                <td>{{ demande.localisation.site.name }}</td>
                                <td>{{ demande.localisation.service }}</td>
                                <td>{{ demande.localisation.equipement.name }}</td>
                                <td>{{ demande.description }}</td>
                                <td>{{ demande.state }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const datatablesSimple = document.getElementById('dataTable');
            if (datatablesSimple) {
                new simpleDatatables.DataTable(datatablesSimple);
            }
        });
    </script>
{% endblock %}