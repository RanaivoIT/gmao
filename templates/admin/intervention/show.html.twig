{% extends "admin/base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}
<nav aria-label="breadcrumb" >
	<ol class="breadcrumb my-3">
		<li class="breadcrumb-item">
			<a href="{{ path('admin') }}">Dashboard</a>
		</li>
        <li class="breadcrumb-item">
			<a href="{{ path('admin_intervention') }}">Interventions</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">{{intervention.demande.localisation.equipement.name ~ ", " ~ intervention.demande.localisation.site.name}}</li>
	</ol>
</nav>

<div class="content">
    <div class="card">
        <div class="card-header">
            <span class="card-title h5">Voir la intervention</span>
        </div>
        <div class="card-body">

            <div class="row d-flex align-items-stretch">
                <div class="col-4 card shadow m-2">
                    
                    <div class="card-body text-center">
                        <img src="{{ pictures_directory ~ intervention.demande.localisation.equipement.picture }}" alt="picture" class="rounded img-fluid" style="width: 150px;">
                        <h5 class="my-3">{{ intervention.demande.localisation.equipement.name }}, {{ intervention.demande.localisation.site.name }}</h5>
                        <p class="text-muted mb-1">{{ intervention.demande.localisation.service }}</p>
                        <p class="text-muted mb-4">Mise en service le {{ intervention.demande.localisation.usedAt | date("d/m/Y") }}</p>
                        
                    </div>
                   
                </div>
                <div class="col card shadow m-2">
                    
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">CreatedAt</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.createdAt | date("d/m/Y H:i:s") }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Equipement</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.demande.localisation.equipement.name }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Site</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.demande.localisation.site.name }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Service</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.demande.localisation.service }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">PlannedAt</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.plannedAt | date("d/m/Y H:i:s") }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">StartedAt</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.startedAt | date("d/m/Y H:i:s") }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">FinishedAt</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.finishedAt | date("d/m/Y H:i:s") }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Comment</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.comment }}</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">State</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ intervention.state }}</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Techs</p>
                            </div>
                            <div class="col-sm-9">
                                {% for tech in intervention.techs %}
                                    <p class="text-muted mb-0">{{ tech.nameAndSpeciality }}</p>
                                {% endfor %}
                                
                            </div>
                        </div>
                        <hr>

                        <div class="d-flex justify-content-start">
                            <a href="{{ path('admin_intervention_edit', {'id': intervention.id}) }}" type="button" class="btn btn-success">Modifier</a>
                            <!--<button type="button" class="btn btn-outline-danger disabled ms-1">Supprimer</button>-->
                        </div>
                        
                    </div>


                    
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}