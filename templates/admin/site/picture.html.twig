{% extends "admin/base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

<nav aria-label="breadcrumb" >
	<ol class="breadcrumb my-3">
		<li class="breadcrumb-item">
			<a href="{{ path('admin') }}">Dashboard</a>
		</li>
        <li class="breadcrumb-item">
			<a href="{{ path('admin_site') }}">Sites</a>
		</li>
        <li class="breadcrumb-item">
			<a href="{{ path('admin_site_show', {id:site.id}) }}">{{site.name}}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Changer l'image</li>
	</ol>
</nav>


<div class="content">
    <div class="card">
        <div class="card-header">
            <span class="card-title h5">Changer l'image du site</span>
        </div>
        <div class="card-body">

            {{ form_start(form, {'action': path('admin_site_picture', {'id': site.id}), 'method': 'POST'}) }}

            {{ form_widget(form) }}

            <button class="btn btn-primary" type="submit">Enregistrer</button>
            <a class="btn btn-secondary" href="{{ path('admin_site_show', {'id': site.id}) }}">Annuler</a>

            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}