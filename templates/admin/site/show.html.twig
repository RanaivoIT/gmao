{% extends "admin/base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

<nav aria-label="breadcrumb" >
	<ol class="breadcrumb my-3">
		<li class="breadcrumb-item">
			<a href="{{ path('admin') }}">Dashboard</a>
		</li>
        <li class="breadcrumb-item">
			<a href="{{ path('admin_site') }}">Sites</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">{{site.name}}</li>
	</ol>
</nav>

<div class="content">
    <div class="card">
        <div class="card-header">
            <span class="card-title h5">Voir le site</span>
        </div>
        <div class="card-body">

            <div class="row d-flex align-items-stretch">
                <div class="col-4 card shadow m-2">
                    
                    <div class="card-body text-center">
                        <img src="{{ pictures_directory ~ site.picture }}" alt="picture" class="rounded img-fluid" style="width: 200px;">
                        <h5 class="my-3">{{ site.name }}</h5>
                        <p class="text-muted mb-1">{{ site.address }}</p>
                        <p class="text-muted mb-1">{{ site.email }}</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a href=" {{ path('admin_site_picture', {'id': site.id}) }} " type="button" class="btn btn-warning">Changer l'image</a>
                        </div>
                    </div>
                   
                </div>
                <div class="col card shadow m-2">
                    
                    <div class="card-body">
                        <div class="row responsive">
                            <div class="col-sm-3">
                                <p class="mb-0">Nom du site</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ site.name }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ site.email }}</p>
                            </div>
                        </div>
                        <hr>                  
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Addresse</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ site.address }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Contact</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ site.contact }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Utilisateurs</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ site.users | length }}</p>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-start">
                            <a href="{{ path('admin_site_edit', {'id': site.id}) }}" type="button" class="btn btn-success">Modifier</a>
                            <!--<button type="button" class="btn btn-outline-danger disabled ms-1">Supprimer</button>-->
                        </div>
                        
                    </div>


                    
                </div>
            </div>

            <div class="card my-3 shadow">
                <div class="card-header">
            <span class="card-title h5">Liste des utilisateurs du site</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Pr√©nom</th>
                            <th>Site</th>
                            <th>Poste</th>
                            <th>Email</th>
                            <th>Adresse</th>
                            <th>contact</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {% for user in site.users %}
                            <tr>
                                <td> <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="link-primary" class="link-primary text-decoration-none">{{ user.id }}</a> </td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.site.name }}</td>
                                <td>{{ user.job }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.address }}</td>
                                <td>{{ user.contact }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}