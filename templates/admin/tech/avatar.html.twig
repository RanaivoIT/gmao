{% extends "admin/base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}
<h1 class="my-2 h3">{{ tech.lastname }}, {{tech.firstname}}</h1>

<div class="content">
    <div class="card">
        <div class="card-header">
            <span class="card-title h5">Changer l'avatar</span>
        </div>
        <div class="card-body">

            {{ form_start(form, {'action': path('admin_tech_avatar', {'id': tech.id}), 'method': 'POST'}) }}

            {{ form_widget(form) }}

            <button class="btn btn-primary" type="submit">Enregistrer</button>
            <a class="btn btn-secondary" href="{{ path('admin_tech_show', {'id': tech.id}) }}">Annuler</a>

            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}